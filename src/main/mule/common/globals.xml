	<api-gateway:autodiscovery apiId="${api.id}" ignoreBasePath="true" doc:name="API Autodiscovery" doc:id="ae8de49d-3e6f-4dbe-992b-7034912a09a1" flowRef="sales-db-sys-api-main" />
	<secure-properties:config name="Secure_Properties_Config" doc:name="Secure Properties Config" doc:id="ecaac754-2ad9-4d58-a6ed-fa6f8c4914bd" file="config\secure-config-${env}.yaml" key="${key}" />
